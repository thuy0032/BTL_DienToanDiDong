<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/bg_white_corner"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_coner_yellow"
        android:gravity="center"
       android:padding="12dp"
        android:text="Tải Video Youtube"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <EditText
        android:background="@drawable/box"
        android:padding="10dp"
       android:layout_margin="20dp"
        android:hint="Link Video Youtube "
        android:id="@+id/edit_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btnDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/backgroundbottom5"
            android:text="Tải Xuống"
            app:backgroundTint="@color/red_light" />

</LinearLayout>

